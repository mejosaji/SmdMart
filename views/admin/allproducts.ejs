                    <a href="/admin/getproductcategories" class="btn btn-primary btn-sm rounded">Product Categories</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check ms-2">
                                <input class="form-check-input" type="checkbox" value="">
                            </div>
                        </div>
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All category</option>
                                <option>Daily Staples</option>
                                <option>Snacks & Beverages</option>
                                <option>Packaged Food</option>
                                <option>Personal & Baby Care</option>
                                <option>Household Care</option>
                                <option>Diary & Eggs</option>
                                <option>Home & Kitchen</option>
                            </select>
                        </div>
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-md-2 col-6">
                            <input type="date" value="02.05.2021" class="form-control">
                        </div>
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <% products.forEach(product => {%>
                        <div class="<%=product._id%>">
                    <article class="itemlist">
                        <div class="row align-items-center">
                            <div class="col col-check flex-grow-0">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                <a class="itemside" href="#">
                                    <div class="left">
                                        <img src=" <%=product.images[0]%>" class="img-sm img-thumbnail">
                                    </div>
                                    <div class="info">
                                        <h6 class="mb-0"><%=product.productTitle%></h6>
                                    </div>
                                </a>
                            </div>
                            <div class="col-lg-2 col-sm-2 col-4 col-price"> <span><%=product.cost%></span> </div>
                            <div class="col-lg-2 col-sm-2 col-4 col-status">
                                <span class="badge rounded-pill alert-success">In stock</span>
                            </div>
                            <div class="col-lg-1 col-sm-2 col-4 col-date">
                                <span>02.11.2021</span>
                            </div>
                            <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                <a href="#" class="btn btn-sm font-sm rounded btn-brand">
                                    <i class="material-icons md-edit"></i> Edit
                                </a>
                               <button class="btn btn-danger btn-sm" onclick="deleteProduct('<%= product._id %>')">Delete</button>
                            </div>
                        </div> <!-- row .// -->
                    </article>
                </div>
                 <%})%> <!-- itemlist  .// -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->

            <script>

function deleteProduct(productId){
    console.log(productId,'rrrrrrrrrrrrr');

    const isConfirmed = confirm('Are you sure you want to delete this Product')
    if(isConfirmed){
        console.log('log...........')

        $.ajax({
            url: '/admin/deleteproduct/' + productId,
            method:'DELETE',
            success:function(data){
                console.log(data,"ooooooooooooooooo")
                $(`.${productId}`).remove();
            },  

            error: function(error){
                console.log(error)
            }
        })
    }
}



            </script>


