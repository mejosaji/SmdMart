    <script>

        $(document).ready(function(){
            function readURL(input){
                if(input.files && input.files[0]){
                    var reader = new FileReader();
                    reader.onload = function(e){
                        $('#imagePreview').attr('src',e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            $('#image').change(function(){
                readURL(this);
            })
        })


        function createBrand(){
            const brandName = $('#brandName').val();
            const brandImage = $('#image')[0].files[0];
            const selectedCategories = $('input[name="selectedCategories"]:checked').map(function(){
                return $(this).val();
            }).get();

            console.log(brandName);
            console.log(brandImage);
            console.log(selectedCategories);

            const formData = new FormData();
            formData.append('brandName',brandName);
            formData.append('image',brandImage);
           
            selectedCategories.forEach(category => {
                formData.append('selectedCategories[]',category);
            });

            $.ajax({
                url : '/admin/addbrand',
                method : 'POST',
                contentType : false,
                processData : false,
                data : formData,
                success : function(data){
                    console.log(data);
                },
                error : function(error){
                    console.error(error);
                }
            })
        }

        $('#createbrandbutton').click(function(){
            createBrand();
        })
    </script>


