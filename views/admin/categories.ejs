    <script>
       
        function createCategory(){
          
            const categoryName = $('#categoryName').val();
            const description = $('#description').val();
            $('#error-cataegoryName').text('');
            $('#error-description').text('');

            if(!categoryName){
                $('#error-categoryName').text('Please enter a category name');
                return;
            }
            if(!description){
                $('#error-description').text('Please enter a description');
                return;
            }
            
           
           
            $.ajax({
                url : '/admin/createcategories',
                method : 'POST',
                contentType : 'application/json',
                data : JSON.stringify({categoryName, description}),
                success : function(data){
                    console.log(data,'category created');
                    updateCategoryTable();
                },
                error : function(error){
                    console.error(error);
                }
            })
        }

       

        function updateCategoryTable(){
            $.ajax({
                url : '/admin/getcategorytable',
                method : 'GET',
                success : function (categories){
                    $('#categoryTableBody').empty();
                    categories.forEach(category => {
                        $('#categoryTableBody').append(`
                        <tr>
                            <td>${category._id}</td>
                            <td>${category.categoryName}</td>
                            <td>${category.description}</td>
                            <td>
                            <!-- Edit button -->
                            <button class="btn btn-warning btn-sm edit-category-btn" data-category-id="${category._id}"
                                data-category-name="${category.categoryName}" data-category-description="${category.description}">
                                Edit
                            </button>

                            <!-- Delete button -->
                            <button class="btn btn-danger btn-sm" onclick="deleteCategory('${category._id}')">Delete</button>
                        </td>
                        </tr>
                            `)
                    })
                }
            })
        }

        
   


        
    </script>

