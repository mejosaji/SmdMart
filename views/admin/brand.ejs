    <script>
       $(document).ready(function(){
        console.log('adarsh');
        $('#categorySelect').on('change',function(){
            var selectedCategoryId = $(this).val();
            console.log('selected Value : ',selectedCategoryId);
            $.ajax({
                    url : '/admin/getbrandsbycategory',
                    method : 'GET',
                    data : {categoryId : selectedCategoryId},
                    success : function(data){
                        $('#brandsContainer').empty();
                        data.brands.forEach(brand => {
                            $('#brandsContainer').append(`
                            <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                                <figure class="card border-1">
                                    <div class="card-header bg-white text-center">
                                        <img height="76" src="/uploads/${brand.image}" class="img-fluid" alt="Logo">
                                    </div>
                                    <figcaption class="card-body text-center">
                                        <h6 class="card-title m-0">${brand.brandName}</h6>
                                        <a href="#>Link texte</a>
                                    </figcaption>
                                </figure>
                            </div>
                            `);
                        })
                    },
                    error : function(error){
                        console.error(error);
                    }
                })
        })
       })
                  
             
    </script>

